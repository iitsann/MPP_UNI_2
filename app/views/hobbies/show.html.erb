<div class="container mt-4">
  <p class="text-success"><%= notice %></p>
  <%= render @hobby %>
  <div class="d-flex justify-content-between align-items-center mt-3">
    <%= link_to "Back to hobbies", hobbies_path, class: "btn btn-secondary" %>
    <%= link_to "Edit this hobby", edit_hobby_path(@hobby), class: "btn btn-primary" %>
    <%= button_to "Destroy this hobby", @hobby, method: :delete, class: "btn btn-danger" %>
  </div>
</div>