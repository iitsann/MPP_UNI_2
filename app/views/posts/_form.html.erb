<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= form_with(model: post, local: true, multipart: true, class: "form-horizontal", style: "font-size: 1.5em;") do |form| %>
        <% if post.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
            <ul>
              <% post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mt-3">
          <%= form.label :image, I18n.t("image"), class: "control-label" %>
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :topic_id, I18n.t("topic"), class: "control-label" %>
          <%= form.collection_select :topic_id, Topic.all, :id, :name, { prompt: I18n.t("select_a_topic") }, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= form.label :title, I18n.t("title"), class: "control-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= form.label :body, I18n.t("body"), class: "control-label" %>
          <%= form.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
