<p class="text-success"><%= notice %></p>

<%= render @post %>

<div class="d-flex justify-content-between align-items-center">
  <%= link_to I18n.t("back_to_posts"), posts_path, class: "btn btn-secondary" %>
  <% if current_user == @post.user %>
    <%= link_to I18n.t("edit_this_post"), edit_post_path(@post), class: "btn btn-primary" %>
  <% end %>
  <% if current_user == @post.user %>
    <%= button_to I18n.t("destroy_this_post"), @post, method: :delete, class: "btn btn-danger" %>
  <% end %>
</div>
