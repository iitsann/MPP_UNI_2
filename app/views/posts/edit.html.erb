<% if current_user&.is_banned %>
  <h1>You can't create topics, your account is banned</h1>
<% elsif !current_user %>
  <h1>You have to sign in/sign up edit a post</h1>
<% else %>
  <h1>Editing post</h1>
  <%= render "form", post: @post %>
<% end %>


<br>

<div class="d-flex justify-content-between">
  <%= link_to "Show this post", @post, class: "btn btn-primary" %>
  <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
</div>