<% if current_user&.is_banned %>
  <h1>You can't create topics, your account is banned</h1>
<% elsif !current_user %>
  <h1>You have to sign in/sign up make a post</h1>
<% else %>
  <h1 class="mb-4" ><%= I18n.t("new_post") %></h1>
  <%= render "form", post: @post %>
<% end %>

<br>

<div>
  <%= link_to I18n.t("back_to_posts"), posts_path, class: "btn btn-secondary" %>
</div>
