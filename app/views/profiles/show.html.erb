<div class="container mt-4">
  <p class="text-success"><%= notice %></p>
  <%= render @profile %>
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to I18n.t("back_to_profiles"), profiles_path, class: "btn btn-secondary" %>
    <% if current_user == @profile.user %>
      <%= link_to I18n.t("edit_this_profile"), edit_profile_path(@profile), class: "btn btn-primary" %>
    <% end %>
    <% if current_user == @profile.user %>
      <%= button_to I18n.t("destroy_this_profile"), @profile, method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
