<div class="container mt-4">
  <p class="text-success"><%= notice %></p>
  <%= render @profile %>
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Back to profiles", profiles_path, class: "btn btn-secondary" %>
    <% if current_user == @profile.user %>
      <%= link_to "Edit this profile", edit_profile_path(@profile), class: "btn btn-primary" %>
    <% end %>
    <% if current_user == @profile.user %>
      <%= button_to "Destroy this profile", @profile, method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
