<div class="container mt-4">
  <p class="text-success"><%= notice %></p>
  <h1>Profiles</h1>
  <div id="profiles" class="mt-3">
    <% @profiles.each do |profile| %>
      <div class="card mb-3">
        <%= render profile %>
        <div class="card-body">
          <%= link_to "Show this profile", profile, class: "btn btn-primary" %>
        </div>
        <% if current_user.profile.id != profile[:id] %>
          <div class="card-body">
            <%= button_to create_chat_profile_path(profile), method: :post, class: "btn btn-danger" do %>
              <span> Chat </span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "New profile", new_profile_path, class: "btn btn-success" %>
</div>
