<p class="text-success"><%= notice %></p>

<%= render "topic", topic: @topic %>

<div class="d-flex justify-content-between align-items-center">
  <%= link_to I18n.t("back_to_topics"), topics_path, class: "btn btn-secondary" %>
  <%= link_to I18n.t("edit_this_topics"), edit_topic_path(@topic), class: "btn btn-primary" %>
  <%= button_to I18n.t("destroy_to_topics"), topic_path(@topic), method: :delete, class: "btn btn-danger" %>
</div>
